{
  "extends": "solhint:recommended",
  "plugins": ["prettier"],
  "rules": {
    "compiler-version": ["error", "^0.8.10"],
    "func-visibility": ["warn", { "ignoreConstructors": true }],
    "not-rely-on-time": "off",
    "reason-string": ["warn", { "maxLength": 50 }],
    "ordering": "warn",
    "prettier/prettier": "error"
  }
}
